<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Add Activity - HealthTrack</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Add Activity</h1>
    <p><a href="/">Home</a> | <a href="/activities/my">Back to my activities</a></p>

    <% if (errors && errors.length > 0) { %>
      <div class="error">
        <ul>
          <% errors.forEach(function(e) { %>
            <li><%= e.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="/activities/added">
      <label>Date:
        <input type="date" name="activity_date" value="<%= formData.activity_date || '' %>" required />
      </label>
      <label>Activity type:
        <input type="text" name="activity_type" value="<%= formData.activity_type || '' %>" required />
      </label>
      <label>Duration (minutes):
        <input type="number" name="duration_minutes" min="1" value="<%= formData.duration_minutes || '' %>" required />
      </label>
      <label>Intensity:
        <select name="intensity">
          <option value="">-- select --</option>
          <option value="Low" <%= formData.intensity === 'Low' ? 'selected' : '' %>>Low</option>
          <option value="Medium" <%= formData.intensity === 'Medium' ? 'selected' : '' %>>Medium</option>
          <option value="High" <%= formData.intensity === 'High' ? 'selected' : '' %>>High</option>
        </select>
      </label>
      <label>Distance (km):
        <input type="number" step="0.01" name="distance_km" value="<%= formData.distance_km || '' %>" />
      </label>
      <label>Calories:
        <input type="number" name="calories" value="<%= formData.calories || '' %>" />
      </label>
      <label>Notes:
        <textarea name="notes"><%= formData.notes || '' %></textarea>
      </label>
      <button type="submit">Save Activity</button>
    </form>
  </body>
</html>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Search Results - HealthTrack</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Search Results</h1>
    <p><a href="/">Home</a> | <a href="/search">Back to search</a></p>

    <% if (!results || results.length === 0) { %>
      <p>No activities found matching your search criteria.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Duration (min)</th>
            <th>Intensity</th>
            <th>Distance (km)</th>
            <th>Calories</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(function(a) { %>
            <tr>
              <td><%= a.activity_date.toISOString().slice(0,10) %></td>
              <td><%= a.activity_type %></td>
              <td><%= a.duration_minutes %></td>
              <td><%= a.intensity || '' %></td>
              <td><%= a.distance_km === null ? '' : a.distance_km.toFixed(2) %></td>
              <td><%= a.calories === null ? '' : a.calories %></td>
              <td><%= a.notes || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </body>
</html>
